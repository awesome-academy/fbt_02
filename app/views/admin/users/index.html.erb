<% provide :title, t("admin.user.title") %>
<body>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t("admin.user.title") %></h1>
    </div>
  </div>
  <div>
    <div class="btn-group">
      <div class="row">
        <div class="search">
          <%= search_form_for @search, url: admin_users_path do |f| %>
          <%= f.label :name_cont, t("admin.user_name") %>
          <%= f.search_field :name_cont, class: "form_label" %>
          <%= f.submit t("admin.review.search"), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t("admin.user.id") %></th>
            <th><%= t("admin.user.name") %></th>
            <th><%= t("admin.user.gendor") %></th>
            <th><%= t("admin.user.dob") %></th>
            <th><%= t("admin.user.address") %></th>
            <th><%= t("admin.user.phone") %></th>
            <th><%= t("admin.user.role") %></th>
            <th><%= t("admin.user.action") %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @users %>
        </tbody>
        <%= will_paginate %>
      </table>
    </div>
  </div>
</body>
