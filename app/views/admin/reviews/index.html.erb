<% provide :title, t("admin.review.title") %>
<body>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t("admin.review.title") %></h1>
    </div>
  </div>
  <div>
    <div class="btn-group">
      <div class="row">
        <div class="search">
          <%= search_form_for @search, url: admin_reviews_path do |f| %>
          <%= f.label :user_name, t("admin.user_name") %>
          <%= f.search_field :user_name_cont, class: "form_label" %>
          <%= f.submit t("admin.review.search"), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t("admin.id") %></th>
            <th><%= t("admin.name") %></th>
            <th><%= t("admin.content") %></th>
            <th><%= t("admin.rep") %></th>
            <th><%= t("admin.users.index.action") %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "review", collection: @reviews, as: :comment %>
        </tbody>
        <%= will_paginate %>
      </table>
    </div>
  </div>
</body>
