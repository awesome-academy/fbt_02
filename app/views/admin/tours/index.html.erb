<% provide :title, t("admin.destination") %>
<body>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%= t("admin.destination") %></h1>
    </div>
  </div>
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="btn-group">
      <div class="row">
        <div class="navbar-form navbar-right">
          <%= form_tag admin_tours_path do %>
            <%= label_tag :name %>
            <%= text_field_tag :name %>
            <%= submit_tag t("admin.review.search"), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t("tour.route") %></th>
            <th><%= t("tour.time") %></th>
            <th><%= t("tour.start_palace") %></th>
            <th><%= t("tour.end_palace") %></th>
            <th><%= t("tour.transport") %></th>
            <th><%= t("tour.quantity") %></th>
            <th><%= t("admin.users.index.action") %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @tours %>
        </tbody>
        <%= will_paginate %>
      </table>
    </div>
  </div>
</body>
