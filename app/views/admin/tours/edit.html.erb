<div class="row">
  <div class="col-md6 col-md-offset-3">
    <%= form_for(@tour, url: admin_tour_index_path) do |f| %>

      <%= f.label t "admin.users.edit.name" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label t "admin.users.edit.email" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t "admin.users.edit.password" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label t "admin.users.edit.confirm_password" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("admin.update"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
