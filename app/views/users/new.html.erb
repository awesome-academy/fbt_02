<% provide(:title, t("user.sign_up")) %>
<h1><%= t("user.sign_up") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :date_of_birth %>
      <%= f.date_field :date_of_birth, class: "form-control" %>

      <%= f.label :gender %>
      <div id="gender-area">
        <%= f.label(:gender_0, t("user.male")) %>
        <%= f.radio_button(:gender, User.genders[:male]) %>
        <%= f.label(:gender_1, t("user.female")) %>
        <%= f.radio_button(:gender, User.genders[:female]) %>
      </div>

      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control" %>

      <%= f.label :phone %>
      <%= f.text_field :phone, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("user.btntext"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
